@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/BaseManage/DllMgr/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $("#lbUrl")[0].innerText = data.Url;
                    $("#Url").val(data.Url);
                    $("#Version").val("");
                    $("#SortCode").attr('disabled', 'disabled');
                    $("#Name").attr('disabled', 'disabled');
                    $("#NameSpace").attr('disabled', 'disabled');
                    $("#Description").attr('disabled', 'disabled');
                }
            });
        }
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var dirName = $("#Name").val();
        var jsonDatadll = uploadFile("DllUp", "dll", dirName);
        if (jsonDatadll.success == true) {
            var iconData = jsonDatadll.data;
            var postData;
            if (!!keyValue && iconData.IsNoFile != true) {
                $("#lbUrl")[0].innerText = iconData.Sys_FilePath;
                $("#Url").val(iconData.Sys_FilePath);
                postData = $("#form1").formSerialize();
                $.submitForm({
                    url: "/BaseManage/DllMgr/SubmitForm?keyValue=" + keyValue,
                    param: $("#form1").formSerialize(),
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                });
            } else {
                $.modalMsgWarning("请上传文件！");
            }
        }
    }
    function dllUpChange() {
        var fileName = $("#DllUp").val();
        $("#lbUrl")[0].innerText = fileName;
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">序号</th>
                    <td class="formValue">
                        <input id="SortCode" name="SortCode" type="number" class="form-control required" placeholder="请输入序号" />
                    </td>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="Name" name="Name" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">命名空间</th>
                    <td class="formValue">
                        <input id="NameSpace" name="NameSpace" type="text" class="form-control required" placeholder="请输入命名空间" />
                    </td>
                    <th class="formTitle">版本</th>
                    <td class="formValue">
                        <input id="Version" name="Version" type="text" class="form-control required" placeholder="请输入版本" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">上传</th>
                    <td class="formValue" colspan="3" style="white-space:nowrap">
                        <div>
                            <div class="sys-div-imgupload">
                                <div class="sys-div-upload">
                                    <input id="DllUp" type="file" onchange="dllUpChange()" />请选择程序集
                                </div>
                                <label id="lbUrl" name="lbUrl"></label>
                                <input type="hidden" id="Url" name="Url" />
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Description" name="Description" class="form-control" style="height: 60px"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
