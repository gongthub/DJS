@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/BaseManage/JobMgr/GetJobConfigs",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    initControl(data);
                }
            });
        }
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/BaseManage/JobMgr/SubmitConfigs?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function initControl(data) {
        $("#STATUS").bindSelect({
            url: "/BaseManage/JobMgr/GetConfigTypeGridJson",
            id: "Value",
            text: "Name"
        });
        if (data != null && data.length > 0) {
            $("#hdConfigSels").val();
            $.each(data, function (index, obj) {
                var configNames = $("#hdConfigSels").val();
                $("#hdConfigSels").val(configNames + "&" + obj.Name);
                if (obj.Name == "STATUS") {
                    $("#STATUS").val(obj.Value);
                    $("#STATUS").change();
                }
                else {
                    var trtem = "<tr><th class='formTitle' style='width:120px;'>" + obj.Name + "：</th><td class='formValue' colspan='3'><input id='" + obj.Name + "' name='" + obj.Name + "' type='text' class='form-control' value='" + obj.Value + "'/></td></tr>";
                    $("#tbConfigContent").append(trtem);
                }
            });
        }
    }
</script>
<form id="form1">
    <input type="hidden" id="hdConfigSels" name="hdConfigSels" />
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form" id="tbConfigContent">
                <tr>
                    <th class="formTitle" style='width:120px;'>状态</th>
                    <td class="formValue" colspan='3'>
                        <select id="STATUS" name="STATUS" class="form-control"></select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
