@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/BaseManage/JobPool/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'ID', hidden: true },
                { label: '名称', name: 'Name', width: 120, align: 'left' },
                { label: '触发器', name: 'TriggerName', width: 120, align: 'left' },
                { label: '类型', name: 'TypeName', width: 80, align: 'left' },
                { label: '策略', name: 'Crons', width: 80, align: 'left' },
                {
                    label: '时间', name: 'TimeShow', width: 120, align: 'left'
                },
                { label: '程序集', name: 'DLLName', width: 120, align: 'left' },
                { label: '程序集版本', name: 'DllVersion', width: 80, align: 'left' },
                //{ label: '下次执行时间', name: 'DLLName', width: 120, align: 'left' },
                { label: '状态', name: 'StateName', width: 80, align: 'left' },
                {
                    label: '加入时间', name: 'AddPoolTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                }
            ],
            pager: "#gridPager",
            sortname: 'Name asc,CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }

    function btn_doWork() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue != null && keyValue != undefined && keyValue != "") {
            $.deleteForm({
                prompt: "是否确认立即执行？",
                url: "/BaseManage/JobPool/DoWork",
                param: { keyValue: keyValue },
                success: function () {
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        } else {
            $.modalMsgWarning("请选择一行数据！");
        }
    }
    function btn_stop() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue != null && keyValue != undefined && keyValue != "") {
            $.deleteForm({
                prompt: "是否确认暂停任务？",
                url: "/BaseManage/JobPool/Stop",
                param: { keyValue: keyValue },
                success: function () {
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        } else {
            $.modalMsgWarning("请选择一行数据！");
        }
    }
    function btn_run() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue != null && keyValue != undefined && keyValue != "") {
            $.deleteForm({
                prompt: "是否确认启用任务？",
                url: "/BaseManage/JobPool/Run",
                param: { keyValue: keyValue },
                success: function () {
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        } else {
            $.modalMsgWarning("请选择一行数据！");
        }
    }
    function btn_remove() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue != null && keyValue != undefined && keyValue != "") {
            $.deleteForm({
                prompt: "是否确认移除任务？",
                url: "/BaseManage/JobPool/Remove",
                param: { keyValue: keyValue },
                success: function () {
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        } else {
            $.modalMsgWarning("请选择一行数据！");
        }
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-doWork" onclick="btn_doWork()"><i class="fa fa-pencil-square-o"></i>立即执行</a></li>
                <li><a id="NF-stop" onclick="btn_stop()"><i class="fa fa-trash-o"></i>暂停任务</a></li>
                <li><a id="NF-run" onclick="btn_run()"><i class="fa fa-search-plus"></i>启用任务</a></li>
                <li><a id="NF-remove" onclick="btn_remove()"><i class="fa fa-file-code-o"></i>移除任务</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="任务名称" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
