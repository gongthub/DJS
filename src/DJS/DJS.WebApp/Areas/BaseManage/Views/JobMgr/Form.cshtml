@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/BaseManage/JobMgr/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
        $("#Type").change(function () {
            processTypeChange();
        });
        $("#DLLID").change(function () {
            processDllClass();
        });
        $("#selCron").click(function () {
            $.modalOpen({
                id: "SysMainCron",
                title: "选择策略",
                url: "/Content/Cron/index.htm",
                width: "580px",
                height: "450px",
                callBack: function (iframeId) {
                    var syscrons = top.frames[iframeId].selectCron();
                    $("#Crons").val(syscrons);
                }
            });
        });
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/BaseManage/JobMgr/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function initControl() {
        $("#Type").bindSelect({
            url: "/BaseManage/JobMgr/GetTypeGridJson",
            id: "Value",
            text: "Name",
            callBack: function () {
                processTypeChange();
            }
        });
        $("#GroupName").bindSelect({
            url: "/BaseManage/JobGroupMgr/GetSelectGridJson",
            id: "ID",
            text: "Name"
        });
        $("#TriggerGroup").bindSelect({
            url: "/BaseManage/TriggerGroupMgr/GetSelectGridJson",
            id: "ID",
            text: "Name"
        });
        $("#DLLID").bindSelect({
            url: "/BaseManage/DllMgr/GetSelectGridJson",
            id: "ID",
            text: "Name",
            callBack: function () {
                processDllClass();
            }
        });
    }

    function processTypeChange() {
        var type = $("#Type").val();
        if (type == 0) {
            $("#divselCron").show();
            $("#Time").hide();
            $("#Crons").addClass("required");
            $("#Time").removeClass("required");
            $("#Crons").val("");
            $("#Time").val("");
        } else if (type == 1) {
            $("#Time").show();
            $("#divselCron").hide();
            $("#Time").addClass("required");
            $("#Crons").removeClass("required");
            $("#Crons").val("");
            $("#Time").val("");
        }
    }

    function processDllClass()
    {
        $("#ClassName").empty();
        $("#ClassName").find("option").remove();
        var ddlId = $("#DLLID").val();
        var ddlName = $("#DLLID").find("option:selected").text();
        $("#DLLName").val(ddlName);
        $("#ClassName").bindSelect({
            url: "/BaseManage/DllMgr/GetDllNameGridJson?keyValue=" + ddlId,
            id: "Name",
            text: "Name"
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="Name" name="Name" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                    <th class="formTitle">触发器名称</th>
                    <td class="formValue">
                        <input id="TriggerName" name="TriggerName" type="text" class="form-control required" placeholder="请输入触发器名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">自启动</th>
                    <td class="formValue">
                        <select id="IsAuto" name="IsAuto" class="form-control required">
                            <option value="false">否</option>
                            <option value="true">是</option>
                        </select>
                    </td>
                    <th class="formTitle">配置名称</th>
                    <td class="formValue">
                        <input id="ConfigName" name="ConfigName" type="text" class="form-control required" placeholder="请输入配置名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">任务类型</th>
                    <td class="formValue">
                        <select id="Type" name="Type" class="form-control required"></select>
                    </td>
                    <th class="formTitle">策略</th>
                    <td class="formValue">
                        <div id="divselCron">
                            <div class="sys-div-imgupload">
                                <div class="sys-div-upload" id="selCron">
                                    请选择策略
                                </div>
                                <label>
                                    <input type="text" id="Crons" name="Crons" style="border:none;" readonly />
                                </label>
                            </div>
                        </div>
                        <input id="Time" name="Time" type="text" class="form-control  input-wdatepicker required" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" placeholder="请输入一次性任务时间" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">任务组</th>
                    <td class="formValue">
                        <select id="GroupName" name="GroupName" class="form-control required"></select>
                    </td>
                    <th class="formTitle">触发器组</th>
                    <td class="formValue">
                        <select id="TriggerGroup" name="TriggerGroup" class="form-control required"></select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">程序集</th>
                    <td class="formValue">
                        <select id="DLLID" name="DLLID" class="form-control required"></select>
                        <input type="hidden" id="DLLName" name="DLLName" />
                    </td>
                    <th class="formTitle">实现类</th>
                    <td class="formValue">
                        <select id="ClassName" name="ClassName" class="form-control required"></select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Description" name="Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
